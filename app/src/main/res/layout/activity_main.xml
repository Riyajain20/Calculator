<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number|numberSigned|numberDecimal"
            android:ems="10"
            android:id="@+id/num_a"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.043"
            app:layout_constraintVertical_bias="0.036" android:hint="enter first number" android:textSize="24sp"
            tools:ignore="HardcodedText"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number|numberSigned|numberDecimal"
            android:ems="10"
            android:id="@+id/num_b"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.212"
            android:hint="enter second number" android:textSize="24sp" tools:ignore="HardcodedText"/>
    <Button
            android:text="+"
            tools:ignore="HardcodedText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_add" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.533" android:layout_marginEnd="232dp" android:textSize="36sp"
            android:textStyle="bold"/>
    <Button
            android:text="-"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_sub"
            app:layout_constraintBaseline_toBaselineOf="@+id/btn_add" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="232dp" app:layout_constraintHorizontal_bias="1.0" android:textSize="36sp"
            android:textStyle="bold" tools:ignore="HardcodedText"/>
    <Button
            android:text="*"
            tools:ignore="HardcodedText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_mul" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="232dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.724" android:textSize="36sp" android:textStyle="bold"/>
    <Button
            android:text="/"
            tools:ignore="HardcodedText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_div"
            app:layout_constraintBaseline_toBaselineOf="@+id/btn_mul" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="232dp" app:layout_constraintHorizontal_bias="0.729" android:textSize="36sp"
            android:textStyle="bold"/>
    <TextView
            android:text="Answer"
            tools:ignore="HardcodedText"
            android:layout_width="126dp"
            android:layout_height="33dp"
            android:id="@+id/showres" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="270dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" android:textSize="18sp" android:textStyle="bold|italic"
            android:layout_marginTop="32dp" android:layout_marginBottom="32dp" android:layout_marginStart="32dp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/answer" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="150dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="25dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/showres" android:textSize="24sp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="AC"
            tools:ignore="HardcodedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_clr" android:textSize="24sp"
            android:textStyle="bold" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.367"/>
    <Button
            android:text="MODULO"
            tools:ignore="HardcodedText"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_mod" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="150dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="150dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.85" android:textSize="24sp" android:textStyle="bold|italic"/>


</android.support.constraint.ConstraintLayout>